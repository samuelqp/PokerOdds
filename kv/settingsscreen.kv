

<SettingsScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#0d0d0d")
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            rows: 1
            pos_hint: {"top": 0.60, "right": .75}
            size_hint: 0.5, 0.2
            Button:
                text: "Back to Homescreen"
                on_release:
                    root.manager.transition.direction = 'right'
                    app.change_screen("home_screen")